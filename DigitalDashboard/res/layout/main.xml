<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableRow
        android:id="@+id/rowVelocity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/tensDigit"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/digit0" >
        </ImageView>

        <ImageView
            android:id="@+id/onesDigit"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/digit0" >
        </ImageView>
    </TableRow>

    <TableRow
        android:id="@+id/rowTripometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tripometerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tripometer:"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>

        <TextView
            android:id="@+id/tripometerDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/rowMaxSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/maxVelocityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Speed:"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>

        <TextView
            android:id="@+id/maxVelocityDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" >
        </TextView>
    </TableRow>

</TableLayout>